{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "warn",
        "useKeyWithMouseEvents": "warn",
        "useValidAnchor": "warn"
      },
      "complexity": {
        "noForEach": "off"
      },
      "style": {
        "useConst": "error",
        "useShorthandFunctionType": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn",
        "noAssignInExpressions": "warn",
        "noDoubleEquals": "warn",
        "noDuplicateElseIf": "error",
        "noEmptyBlockStatements": "warn",
        "noRedundantUseStrict": "warn",
        "noSelfCompare": "warn",
        "noUnsafeDeclarationMerging": "warn"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "performance": {
        "noDelete": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn",
        "noDangerouslySetInnerHtmlWithChildren": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "include": ["**/*"],
    "ignore": [
      "CHANGELOG.md",
      "node_modules/**",
      "dist/**",
      "build/**",
      "coverage/**",
      "*.min.js",
      "*.min.css",
      "!.vscode/**",
      "!.github/**",
      "!.husky/**",
      "!.git/**",
      "!.gitignore",
      "!.gitattributes",
      "!.npmignore",
      "!.prettierignore",
      "!.biomeignore",
      "package-lock.json",
      "pnpm-lock.yaml",
      "yarn.lock",
      "!.env",
      "!.env.local",
      "!.env.development.local",
      "!.env.test.local",
      "!.env.production.local",
      "!.env.example"
    ],
    "maxSize": 1048576
  }
}

{
  "name": "tokyo-night-lod",
  "displayName": "Tokyo Night Lod",
  "description": "A refined version of the Tokyo Night theme with improved contrast and modern TypeScript architecture.",
  "version": "1.7.0",
  "author": "lod",
  "publisher": "lod-inc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "icon.png",
  "files": [
    "themes/",
    "icon.png",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/darqus/tokyo-night-vscode-theme-lod"
  },
  "bugs": {
    "url": "https://github.com/darqus/tokyo-night-vscode-theme-lod/issues"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "tokyo",
    "night",
    "dark"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Tokyo Night Lod",
        "uiTheme": "vs-dark",
        "path": "./themes/tokyo-night-dark-color-theme.json"
      }
    ]
  },
  "scripts": {
    "build": "ts-node src/build.ts",
    "validate": "ts-node src/scripts/validate-theme.ts",
    "validate:all": "ts-node src/scripts/validate-theme.ts --all",
    "validate:summary": "ts-node src/scripts/validate-theme.ts --all --summary",
    "validate:fix": "ts-node src/scripts/validate-theme.ts --all --fix",
    "test": "npm run validate:all && npm run test:smoke",
    "lint": "npm run lint:hex",
    "lint:hex": "ts-node scripts/lint-hex.ts",
    "test:smoke": "ts-node scripts/smoke-compare.ts",
    "cli": "ts-node scripts/cli.ts",
    "package": "vsce package",
    "publish": "vsce publish",
    "release": "ts-node scripts/smart-version.ts",
    "release:dry": "ts-node scripts/smart-version.ts --dry-run",
    "release:patch": "ts-node scripts/smart-version.ts --patch",
    "release:minor": "ts-node scripts/smart-version.ts --minor",
    "release:major": "ts-node scripts/smart-version.ts --major",
    "release:force": "ts-node scripts/smart-version.ts --force",
    "version": "ts-node scripts/smart-version.ts",
    "version:dry": "ts-node scripts/smart-version.ts --dry-run"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}

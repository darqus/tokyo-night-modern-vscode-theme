{
  "name": "tokyo-night-modern",
  "displayName": "Tokyo Night Modern",
  "description": "A dark theme for Visual Studio Code",
  "version": "1.14.15",
  "author": "lod",
  "publisher": "lod-inc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "icon.png",
  "files": [
    "themes/",
    "icon.png",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/darqus/tokyo-night-moredn-vscode-theme"
  },
  "bugs": {
    "url": "https://github.com/darqus/tokyo-night-moredn-vscode-theme/issues"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "tokyo",
    "night",
    "dark"
  ],
  "contributes": {
    "themes": [
      {
        "label": "${THEME_DISPLAY_NAME:-Tokyo Night Modern}",
        "uiTheme": "${THEME_TYPE:-dark}",
        "path": "./themes/${THEME_FILENAME:-tokyo-night-modern-color-theme}.json"
      }
    ]
  },
  "scripts": {
    "build": "ts-node src/build.ts",
    "validate": "ts-node scripts/validate-theme.ts",
    "validate:all": "npm run validate && npm run test",
    "test": "npm run test:unit",
    "test:unit": "jest tests/unit",
    "test:watch": "jest tests/unit --watch",
    "test:coverage": "jest tests/unit --coverage",
    "package": "npm run build && vsce package",
    "release": "ts-node scripts/release.ts",
    "release:bash": "bash scripts/release.sh",
    "release:dry": "ts-node scripts/release.ts --dry-run",
    "release:patch": "ts-node scripts/release.ts --patch",
    "release:minor": "ts-node scripts/release.ts --minor",
    "release:major": "ts-node scripts/release.ts --major",
    "docs:colors": "ts-node scripts/generate-color-docs.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.10",
    "jest": "^29.7.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}

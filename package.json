{
  "name": "tokyo-modern",
  "displayName": "Tokyo Modern",
  "description": "Beautiful modern dark theme for VS Code with carefully crafted colors and contemporary design",
  "version": "2.3.2620",
  "author": "lod",
  "publisher": "lod-inc",
  "license": "MIT",
  "type": "module",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/darqus/tokyo-modern-vscode-theme"
  },
  "bugs": {
    "url": "https://github.com/darqus/tokyo-modern-vscode-theme/issues"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "tokyo",
    "night",
    "dark"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Tokyo Modern",
        "uiTheme": "vs-dark",
        "path": "./themes/tokyo-modern-color-theme.json"
      }
    ]
  },
  "scripts": {
    "build": "npx tsx scripts/build-theme.ts && biome format --write themes/tokyo-modern-color-theme.json",
    "build:vsix": "npx tsx scripts/build-vsix.ts",
    "package": "npm run build:vsix",
    "release": "npx tsx scripts/release.ts",
    "lint": "biome lint src/ scripts/",
    "format": "biome check --fix --unsafe src/ scripts/ && biome format --write src/ scripts/",
    "test": "vitest run --update",
    "test:run": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:no-coverage": "COVERAGE=false vitest run --coverage=false",
    "check:contrast": "npx tsx scripts/check-contrast.ts",
    "check:syntax": "npx tsx scripts/check-syntax-contrast.ts",
    "analyze:colors": "npx tsx scripts/analyze-token-colors.ts",
    "deps:check": "ncu",
    "deps:update": "ncu -u"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.9",
    "@vscode/vsce": "^3.7.0",
    "lint-staged": "^16.2.6",
    "npm-check-updates": "^19.1.2",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}

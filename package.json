{
  "name": "tokyo-night-modern",
  "displayName": "Tokyo Night Modern",
  "description": "Beautiful modern dark theme for VS Code with carefully crafted colors and contemporary design",
  "version": "2.0.6",
  "author": "lod",
  "publisher": "lod-inc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "icon.png",
  "files": [
    "themes/",
    "icon.png",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/darqus/tokyo-night-modern-vscode-theme"
  },
  "bugs": {
    "url": "https://github.com/darqus/tokyo-night-modern-vscode-theme/issues"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "tokyo",
    "night",
    "dark"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Tokyo Night Modern",
        "uiTheme": "vs-dark",
        "path": "./themes/tokyo-night-modern-color-theme.json"
      }
    ]
  },
  "scripts": {
    "build": "ts-node src/build.ts",
    "build:watch": "ts-node-dev --respawn src/build.ts",
    "validate": "ts-node scripts/validate-theme.ts",
    "validate:all": "npm run validate && npm run test",
    "test": "jest tests/unit --passWithNoTests",
    "test:simplified": "jest tests/unit/simplified.test.ts",
    "test:update": "jest tests/unit -u",
    "test:watch": "jest tests/unit --watch",
    "test:coverage": "jest tests/unit --coverage",
    "test:coverage:simplified": "jest tests/unit --coverage --testPathPatterns=simplified",
    "docs:registry": "ts-node scripts/generate-token-registry-doc.ts",
    "docs:tokens": "ts-node scripts/generate-token-docs.ts",
    "docs:colors": "ts-node scripts/generate-color-docs.ts",
    "package": "npm run build && vsce package",
    "release": "ts-node scripts/release.ts",
    "release:dry": "ts-node scripts/release.ts --dry-run",
    "clean": "rm -rf coverage themes/*.json",
    "clean:cache": "rm -rf node_modules/.cache"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "jest": "^30.1.3",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
